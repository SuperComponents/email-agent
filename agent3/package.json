{
  "name": "emailsmart",
  "version": "1.0.0",
  "description": "TypeScript project with Bun server and Drizzle ORM",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:spam": "NODE_ENV=test vitest run src/tests/integration/agent-spam-detection.test.ts",
    "test:actions": "NODE_ENV=test vitest run src/tests/integration/agent-action-logging.test.ts",
    "test:rag": "NODE_ENV=test vitest run src/tests/integration/rag-search.test.ts",
    "test:draft": "NODE_ENV=test vitest run src/tests/integration/agent-write-draft.test.ts",
    "test:db:setup": "NODE_ENV=test npx tsx src/scripts/setup-test-db.ts",
    "test:db:reset": "NODE_ENV=test NODE_OPTIONS='--trace-warnings --stack-trace-limit=50' npx tsx src/scripts/reset-test-db.ts",
    "test:work": "NODE_ENV=test NODE_OPTIONS='--trace-warnings --stack-trace-limit=50' npx tsx src/scripts/plz-work.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:all": "tsc --noEmit && eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "generate:emails": "npx tsx src/scripts/generate-emails.ts",
    "generate:emails:test": "npx tsx src/scripts/generate-emails.ts --test",
    "generate:threads": "npx tsx src/scripts/generate-threads.ts",
    "generate:threads:test": "npx tsx src/scripts/generate-threads.ts --test",
    "list:emails": "npx tsx src/scripts/list-emails.ts",
    "list:emails:file": "npx tsx src/scripts/list-emails-to-file.ts",
    "db:clear": "npx tsx src/scripts/clear-database.ts",
    "db:clear:threads": "npx tsx src/scripts/clear-threads.ts",
    "actions:view": "npx tsx src/scripts/view-agent-actions.ts",
    "db:dump": "npx tsx src/scripts/dump-database-to-json.ts",
    "psql": "psql $DATABASE_URL",
    "dbb": "psql postgresql://localhost:5432/emailsmart_test",
    "dbc": "psql postgresql://localhost:5432/emailsmart_merge",
    "psql:test": "psql $TEST_DATABASE_URL",
    "check:openai": "npx tsx src/scripts/check-openai.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@hono/node-server": "^1.11.1",
    "@openai/agents": "^0.0.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.15.4",
    "better-sqlite3": "^12.2.0",
    "bun": "^1.2.18",
    "dotenv": "^17.1.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.0.0",
    "openai": "^5.8.3",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bun": "^1.0.0",
    "@types/node": "^20.19.5",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.36.0"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
